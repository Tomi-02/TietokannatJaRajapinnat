const prompt = require('prompt-sync')();

function getSum() {
    var s1 = prompt("Enter the first number ");
    var num1=parseFloat(s1);

    var s2 = prompt("Enter the second number ");
    var num2=parseFloat(s2);

    return Math.max(num1,num2);
}

console.log(getSum() + " is the bigger number");

function palindrome() {
    let s1 = prompt("Enter a word ");
    const ans = s1.split('').reverse().join('');
    if(s1===ans){
        console.log("The word is a palindrome");
    }
    else{
        console.log("The word is not a palindrome");
    }
}

palindrome();